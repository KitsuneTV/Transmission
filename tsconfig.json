{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "ES2022",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["src/**/*", "types.d.ts"]
}
